{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/prisma/(.*)": "<rootDir>/../libs/prisma/src/$1",
    "@app/prisma": "<rootDir>/../libs/prisma/src",
    "@app/shared/(.*)": "<rootDir>/../libs/shared/src/$1",
    "@app/shared": "<rootDir>/../libs/shared/src",
    "@app/email/(.*)": "<rootDir>/../libs/email/src/$1",
    "@app/email": "<rootDir>/../libs/email/src",
    "@app/decorators/(.*)": "<rootDir>/../libs/decorators/src/$1",
    "@app/decorators": "<rootDir>/../libs/decorators/src",
    "@app/base-controller/(.*)": "<rootDir>/../libs/base-controller/src/$1",
    "@app/base-controller": "<rootDir>/../libs/base-controller/src"
  }
}